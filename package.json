{
  "name": "costcodle",
  "version": "2.0.0",
  "description": "A Wordle-esque daily guessing game for Costco food products",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "build": "npm run clean && npm run build:ts && npm run copy:assets",
    "build:ts": "tsc && tsc --project tsconfig.sw.json",
    "build:watch": "tsc --watch",
    "copy:assets": "npm run copy:html && npm run copy:styles && npm run copy:assets:static && npm run copy:json",
    "copy:html": "cp index.html dist/",
    "copy:styles": "cp -r styles dist/",
    "copy:assets:static": "cp -r assets dist/ && cp -r public dist/",
    "copy:json": "cp games.json dist/",
    "clean": "rm -rf dist",
    "serve": "http-server dist -p 8000 -o",
    "serve:prod": "http-server dist -p 8000",
    "start": "npm run build && npm run serve:prod",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run type-check && npm run format:check && npm run test:run",
    "ci": "npm run type-check && npm run test:run && npm run build",
    "deploy": "npm run ci && gh-pages -d dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "game",
    "wordle",
    "costco",
    "typescript"
  ],
  "author": "Zachary Kermitz",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.0.0",
    "eslint": "^9.35.0",
    "gh-pages": "^6.0.0",
    "http-server": "^14.0.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
